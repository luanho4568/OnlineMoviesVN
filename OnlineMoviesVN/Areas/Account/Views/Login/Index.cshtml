<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>Đăng nhập</title>
    <!-- MDB icon -->
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" />
    <!-- Google Fonts Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" />
    <!-- MDB -->
    <link rel="stylesheet" href="~/Content/account/css/bootstrap-login-form.min.css" />
</head>

<body style="background-color: #f4f7fa;">
    <!-- Start your project here-->

    <style>
        .divider:after,
        .divider:before {
            content: "";
            flex: 1;
            height: 1px;
            background: #eee;
        }

        .login-container {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
            padding: 40px;
        }

            .login-container h3 {
                margin-bottom: 20px;
            }

        .eye-icon {
            cursor: pointer;
            position: absolute;
            right: 15px;
            top: 10px;
        }
    </style>

    <partial name="_Notifycation" />

    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-8 col-lg-7 col-xl-6 d-none d-lg-block">
                    <img src="~/Content/Account/img/backgroundAccount.png" class="img-fluid" alt="Phone image">
                </div>
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1 login-container">
                    <h3 class="text-center">ĐĂNG NHẬP</h3>
                    <form action="LoginSubmit/" method="post">
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <input type="email" id="form1Example13" name="Email" class="form-control form-control-lg" value="@ViewData["Email"]" required />
                            <label class="form-label" for="form1Example13">Tài khoản</label>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <input type="password" id="form1Example23" name="Password" class="form-control form-control-lg" value="@ViewData["Password"]" required />
                            <label class="form-label" for="form1Example23">Mật khẩu</label>
                            <i class="fas fa-eye eye-icon" id="togglePassword"></i>

                        </div>

                        <div class="d-flex justify-content-around align-items-center mb-4">
                            <!-- Checkbox -->
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="RememberMe" id="form1Example3" @ViewData["Remember"] />
                                <label class="form-check-label" for="form1Example3"> Lưu tài khoản </label>
                            </div>
                            <a href="#!">Quên mật khẩu?</a>
                        </div>

                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Đăng nhập</button>

                        <div class="divider d-flex align-items-center my-4">
                            <p class="text-center fw-bold mx-3 mb-0 text-muted">Hoặc</p>
                        </div>


                    </form>
                    <!-- Continue with Google -->
                    <a class="btn btn-primary btn-lg btn-block" href="@Url.Action("LoginWithFacebook", "Facebook", new { area = "Account" })">
                        <i class="fab fa-facebook-f me-2"></i>Đăng nhập bằng FACEBOOK
                    </a>
                    <a class="btn btn-danger btn-lg btn-block" href="@Url.Action("LoginWithGoogle", "Google", new { area = "Account" })">
                        <i class="fab fa-google me-2"></i>Đăng nhập bằng GOOGLE
                    </a>
                    <div class="text-center mt-4">
                        <p>
                            Chưa có tài khoản? <a href="/account/register">Đăng ký ngay</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- MDB -->
    <script type="text/javascript" src="~/Content/account/js/mdb.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Custom scripts -->
    <script type="text/javascript">
        $(document).ready(function () {
            $('#togglePassword').click(function () {
                var passwordField = $('#form1Example23');
                var type = passwordField.attr('type') === 'password' ? 'text' : 'password';
                passwordField.attr('type', type);

                $(this).toggleClass('fa-eye-slash');
            });
        });

    </script>
</body>

</html>
